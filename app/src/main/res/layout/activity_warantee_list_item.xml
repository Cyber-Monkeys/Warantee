<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="110dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_centerInParent="false"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="30dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/warantyItemCategory"
            android:layout_width="47dp"
            android:layout_height="51dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/warantyItemDays"
            app:layout_constraintEnd_toStartOf="@+id/warantyItemDays"
            app:layout_constraintTop_toTopOf="@+id/warantyItemDays"
            app:srcCompat="@drawable/com_facebook_button_send_icon_blue" />

        <ImageView
            android:id="@+id/warantyItemImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/warantyItemID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="ID: 6"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/warantyItemImage"
            app:layout_constraintTop_toTopOf="@+id/warantyItemCategory" />

        <TextView
            android:id="@+id/warantyItemSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mcdonalds"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/warantyItemID"
            app:layout_constraintTop_toBottomOf="@+id/warantyItemID" />

        <TextView
            android:id="@+id/warantyItemDays"
            android:layout_width="46dp"
            android:layout_height="65dp"
            android:layout_marginEnd="20dp"
            android:text="30"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>